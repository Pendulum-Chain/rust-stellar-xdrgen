{
  "name": "rust-stellar-xdrgen",
  "version": "0.6.0",
  "description": "Generator for Rust Decoder/Encoder of XDR types used in Stellar",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "test": "node test/test",
    "download-x": "cd x2JavaScript && ./generate && cd ..",
    "generate": "rimraf generated && npm run generate-transaction-types && npm run generate-all-types",
    "generate-transaction-types": "DESTINATION=./generated MAIN_FILE_NAME=main_types.rs GENERATE_TYPES=TransactionEnvelope,TransactionResult,TransactionMeta,EnvelopeType npx ts-node x2JavaScript/generated/stellar-xdr_generated.ts",
    "generate-all-types": "DESTINATION=./generated MAIN_FILE_NAME=all_types.rs npx ts-node x2JavaScript/generated/stellar-xdr_generated.ts",
    "build-complete": "npm run download-x && npm run generate",
    "prepublishOnly": "npm run build-complete"
  },
  "author": "SatoshiPay Ltd",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/node": "^15.12.2",
    "js-xdr": "file:./js-xdr",
    "rimraf": "^2.6.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/satoshipay/ts-stellar-xdr.git"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2
  },
  "dependencies": {
    "change-case": "^4.1.2"
  }
}
